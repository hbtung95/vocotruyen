.{{variantLower}} {
  background: rgba(255,255,255,0.8);
  border-radius: 12px;
  padding: 10px 16px;
  display: flex;
  align-items: center;
  gap: 10px;
}
.highlight {
  border: 2px solid #0A84FF;
}
.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: cover;
}
.info { display: flex; flex-direction: column; }
.name { font-size: 1rem; font-weight: 600; }
.rank { font-size: 0.95rem; color: #1976d2; }
